{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "toggl-progress-report",
  "title": "Your Toggl Progress Report",
  "description": "See your progress from your favorite tool",
  "icon": "command-icon.png",
  "author": "KaLeM",
  "categories": [
    "Data"
  ],
  "preferences": [
    {
      "name": "togglApiKey",
      "title": "Toggle API Token",
      "description": "Your Toggl API Token",
      "type": "password",
      "required": true
    },
    {
      "name": "togglWorkspaceId",
      "title": "Workspace ID",
      "description": "Your Toggl Workspace ID",
      "type": "textfield",
      "required": true
    }
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "weekly",
      "title": "Weekly Toggl Report",
      "description": "Get your time logs from Toggl API",
      "keywords": [
        "Toggl",
        "time logs",
        "time report"
      ],
      "mode": "view"
    },
    {
      "name": "monthly",
      "title": "Monthly Toggl Report",
      "description": "Get your time logs from Toggl API",
      "keywords": [
        "Toggl",
        "time logs",
        "time report"
      ],
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.4",
    "@raycast/utils": "^1.5.2",
    "axios": "^1.3.4",
    "node-fetch": "^3.3.1",
    "pretty-ms": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.24.6",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
